{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Navidrome Plugin Manifest",
  "description": "Schema for Navidrome Plugin manifest.json files",
  "type": "object",
  "required": [
    "name",
    "author",
    "version",
    "description",
    "capabilities",
    "permissions"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the plugin"
    },
    "author": {
      "type": "string",
      "description": "Author or organization that created the plugin"
    },
    "version": {
      "type": "string",
      "description": "Plugin version using semantic versioning format"
    },
    "description": {
      "type": "string",
      "description": "A brief description of the plugin's functionality"
    },
    "capabilities": {
      "type": "array",
      "description": "List of capabilities implemented by this plugin",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "MetadataAgent",
          "Scrobbler",
          "SchedulerCallback",
          "LifecycleManagement",
          "WebSocketCallback"
        ]
      }
    },
    "permissions": {
      "type": "object",
      "description": "Host services the plugin is allowed to access",
      "additionalProperties": true,
      "properties": {
        "http": {
          "type": "object",
          "description": "HTTP service permissions",
          "required": ["reason"],
          "properties": {
            "reason": {
              "type": "string",
              "minLength": 1,
              "description": "Explanation of why HTTP access is needed"
            }
          },
          "additionalProperties": false
        },
        "config": {
          "type": "object",
          "description": "Configuration service permissions",
          "required": ["reason"],
          "properties": {
            "reason": {
              "type": "string",
              "minLength": 1,
              "description": "Explanation of why configuration access is needed"
            }
          },
          "additionalProperties": false
        },
        "scheduler": {
          "type": "object",
          "description": "Scheduler service permissions",
          "required": ["reason"],
          "properties": {
            "reason": {
              "type": "string",
              "minLength": 1,
              "description": "Explanation of why scheduler access is needed"
            }
          },
          "additionalProperties": false
        },
        "websocket": {
          "type": "object",
          "description": "WebSocket service permissions",
          "required": ["reason"],
          "properties": {
            "reason": {
              "type": "string",
              "minLength": 1,
              "description": "Explanation of why WebSocket access is needed"
            }
          },
          "additionalProperties": false
        },
        "cache": {
          "type": "object",
          "description": "Cache service permissions",
          "required": ["reason"],
          "properties": {
            "reason": {
              "type": "string",
              "minLength": 1,
              "description": "Explanation of why cache access is needed"
            }
          },
          "additionalProperties": false
        },
        "artwork": {
          "type": "object",
          "description": "Artwork service permissions",
          "required": ["reason"],
          "properties": {
            "reason": {
              "type": "string",
              "minLength": 1,
              "description": "Explanation of why artwork service access is needed"
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
